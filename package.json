{
  "name": "next-js-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "dev": "run-s copy:assets next:dev",
    "start": "run-s build:prod next:start",
    "build": "run-s copy:assets next:build",
    "build:prod": "run-s copy:assets next:build next:export",
    "next:build": "next build",
    "next:export": "next export",
    "next:dev": "next dev",
    "next:lint": "next lint --fix",
    "next:start": "next start",
    "clean": "rimraf .next out",
    "copy:assets": "copyfiles -u 1 \"./src/assets/**/*.+(png|svg|jpg|jpeg|webp|mp4|pdf|ico)\" public",
    "analize": "cross-env ANALYZE=true npm run build",
    "build-types": "tsc --noEmit --pretty",
    "postbuild": "next-sitemap",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.0",
    "copyfiles": "^2.4.1",
    "lodash": "^4.17.21",
    "next": "^12.1.4",
    "next-seo": "^5.4.0",
    "react": "^17.0.2",
    "react-cool-dimensions": "^2.0.7",
    "react-dom": "^17.0.2",
    "react-hotjar": "^5.0.0",
    "react-icons": "^4.3.1",
    "tailwindcss": "^3.0.24"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^12.1.4",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.44",
    "@types/tailwindcss": "^3.0.10",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "autoprefixer": "^10.4.4",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.7",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^12.1.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-tailwindcss": "^3.5.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "next-sitemap": "^2.5.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "4.6.3"
  },
  "license": "ISC"
}
